<section>
    <div class="container">
      <h1>Add A Party</h1>
      {{#each errors}}
        <div class="alert alert-danger">
          <p>{{text}}</p>
        </div>
      {{/each}}
      <form action="/parties/add" method="POST">
        <div class="form-group">
          <label for="title">Party Title</label>
          <input type="text" name="title" class="form-control" placeholder="eg. Traffic Light Party, End of the year celebration"
            maxlength="100" value={{title}}>
        </div>
        <div class="form-group">
          <label for="tags">Tags</label>
          <input type="text" name="tags" class="form-control" placeholder="eg. bar, rez, dc, trent, otu"
          maxlength="100" value={{tags}}>
        </div>
        <div class="form-group">
          <label for="organizer">Organizer</label>
          <input type="text" name="organizer" class="form-control" placeholder="eg. the BLVD, TKE, rez_king_97" value={{organizer}}>
        </div>
        <div class="form-group">
          <label for="details">Details</label>
          <textarea name="details" class="form-control" placeholder="Details of the party"
            rows="6">{{details}}</textarea>
        </div>
        <div class="form-group">
          <label for="contact">Email</label>
          <input type="text" name="contact_info" id="contactinfo" class="form-control" placeholder="e.g. party@otu.com" value={{contact_info}}>
        </div>
        <input type="submit" value="Add Party" class="btn btn-reverse">
      </form>
    </div>
</section>